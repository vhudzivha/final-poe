@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <h2 class="mb-4" style="color: white; font-weight: bold;">Dashboard Overview</h2>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="card-custom p-4 text-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <h1 class="display-4 mb-2">5</h1>
            <p class="mb-0">Pending Claims</p>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card-custom p-4 text-center" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
            <h1 class="display-4 mb-2">12</h1>
            <p class="mb-0">Approved Claims</p>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card-custom p-4 text-center" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white;">
            <h1 class="display-4 mb-2">R24,500</h1>
            <p class="mb-0">Total Earnings</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 mb-4">
        <div class="card-custom">
            <div class="card-header" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white; padding: 15px; border-radius: 15px 15px 0 0;">
                <h5 class="mb-0">Recent Activity</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Claim CM-2024-03</strong> was approved by Academic Manager
                                <br><small class="text-muted">2 hours ago</small>
                            </div>
                            <span class="badge bg-success">Approved</span>
                        </div>
                    </div>
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Claim CM-2024-04</strong> is pending Programme Coordinator review
                                <br><small class="text-muted">1 day ago</small>
                            </div>
                            <span class="badge bg-warning text-dark">Pending</span>
                        </div>
                    </div>
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>New monthly claim period</strong> opened for March 2024
                                <br><small class="text-muted">3 days ago</small>
                            </div>
                            <span class="badge bg-info text-white">Info</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card-custom">
            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 15px; border-radius: 15px 15px 0 0;">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-3">
                    <a asp-action="Claims" asp-controller="Home" class="btn btn-custom">
                        Submit New Claim
                    </a>
                    <a asp-action="TrackClaims" asp-controller="Home" class="btn btn-outline-primary">
                        Track My Claims
                    </a>
                    <a href="#" class="btn btn-outline-secondary">
                        View Reports
                    </a>
                </div>
            </div>
        </div>

        <div class="card-custom mt-3">
            <div class="card-header bg-light" style="padding: 15px; border-radius: 15px 15px 0 0;">
                <h6 class="mb-0">System Notifications</h6>
            </div>
            <div class="card-body">
                <div class="small">
                    <div class="mb-2">
                        <i class="text-success">●</i> System maintenance completed
                    </div>
                    <div class="mb-2">
                        <i class="text-warning">●</i> March claims deadline: 31st March
                    </div>
                    <div>
                        <i class="text-info">●</i> New features available
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>